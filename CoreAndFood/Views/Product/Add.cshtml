@using CoreAndFood.Data.Models;
@model urunekle

@{
    ViewData["Title"] = "AddFood";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Product Add Page</h1>

<br />
<form class="form-group" action="Add" asp-icon="Food" method="post" enctype="multipart/form-data">
    @Html.Label("Product Name")
    @Html.TextBoxFor(x=>x.Name, new { @class = "form-control" })
    <br />
    @Html.Label("Stock")
    @Html.TextBoxFor(x=>x.Stock, new { @class = "form-control" })
    <br />
    @Html.Label("Price")
    @Html.TextBoxFor(x=>x.Price, new { @class = "form-control" })
    <br />
    @Html.Label("Choose Image")
    <input type="file" name="ImageURL" />
    <br />
    @Html.Label("Category")
    @Html.DropDownListFor(x=>x.CategoryId,(List<SelectListItem>)ViewBag.v1, new { @class = "form-control" })
    <br />
    @* @Html.Label("Description")
    @Html.TextAreaFor(x=>x.Description, new { @class = "form-control" })
    <br />*@
    

    <button class="btn btn-primary">Save</button>
</form>
    
