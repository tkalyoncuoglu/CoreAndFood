@using X.PagedList;
@using X.PagedList.Mvc.Core
@model IPagedList<CoreAndFood.Data.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Product List</h1>
<br />
@{
    int index = 1;
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Product Name</th>
        <th>Price</th>
        <th>Stock</th>
        <th>Category Name</th>
        <th>Delete</th>
        <th>Update</th>
        <th>Details</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@index</th>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>@item.Stock</td>
            <td>@item.Category.Name</td>
            <td><a href="/Product/Delete/@item.Id" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?')">Delete</a></td>
            <td><a href="/Product/Get/@item.Id/" class="btn btn-success">Update</a></td>
            <td><a href="#" class="btn btn-info">Details</a></td>
        </tr>
        index++;
    }
</table>

@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))
<a href="/Product/Add/" class="btn btn-primary">Add New Food</a>


